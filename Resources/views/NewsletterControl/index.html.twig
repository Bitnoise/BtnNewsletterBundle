{% from 'BtnAdminBundle:Macros:breadcrumb.html.twig' import breadcrumb %}
{% extends 'BtnAdminBundle::base.html.twig' %}

{% block content %}
    <h2>Newsletter</h2>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th class="btn-admin-column-id">Id</th>
                <th>E-mail</th>
                <th>{% trans %}btn_admin.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td class="btn-admin-column-id">{{ entity.id }}</td>
                <td>{{ entity.email }}</td>
                <td><a href="{{ path('cp_newsletter_edit', { 'id': entity.id }) }}" class="btn btn-primary">{% trans %}btn_admin.edit{% endtrans %}</a>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(pagination) }}

    <a href="{{ path('cp_newsletter_new') }}" class="btn btn-primary">{% trans %}btn_admin.add{% endtrans %}</a>
    <a href="{{ path('cp_newsletter_export') }}" class="btn btn-primary">CSV</a>

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'cp_newsletter': 'btn_admin.list'}) }}
{% endblock %}
