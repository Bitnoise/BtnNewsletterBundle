{% from 'BtnAdminBundle:_macros:breadcrumb.html.twig' import breadcrumb %}
{% extends 'BtnAdminBundle::base.html.twig' %}

{% form_theme edit_form 'BtnAdminBundle:Form:fields.html.twig' %}

{% block content %}

    <form action="{{ path('cp_newsletter_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="well form-horizontal" role="form" novalidate>
        <fieldset>
            <legend>Newsletter edit</legend>
            {{ form_widget(edit_form) }}
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">{% trans %}btn_admin.save{% endtrans %}</button>
                </div>
            </div>
        </fieldset>
    </form>

            <form action="{{ path('cp_newsletter_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <a href="{{ path('cp_newsletter') }}" class="btn">
            &laquo; {% trans %}btn_admin.back{% endtrans %}
        </a>
        <button type="submit" data-confirmation="true" data-message="{% trans %}crud.confirm.message{% endtrans %}" data-title="{% trans %}crud.confirm.title{% endtrans %}" class="btn btn-danger">{% trans %}btn_admin.delete{% endtrans %}</button>
    </form>

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'cp_newsletter': 'btn_admin.list', 'cp_newsletter_edit': 'btn_admin.edit'}) }}
{% endblock %}
